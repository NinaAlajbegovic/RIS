@model SportskiKlub.Models.Prisustvo

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj novo prisustvo</h1>

<h4>Prisustvo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KorisnikID" class="control-label"></label>
                <input asp-for="KorisnikID" class="form-control" />
                <span asp-validation-for="KorisnikID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreningID" class="control-label"></label>
                <input asp-for="TreningID" class="form-control" />
                <span asp-validation-for="TreningID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Prisutan" /> @Html.DisplayNameFor(model => model.Prisutan)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
