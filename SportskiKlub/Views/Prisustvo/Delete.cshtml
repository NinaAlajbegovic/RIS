@model SportskiKlub.Models.Prisustvo

@{
    ViewData["Title"] = "Delete";
}

<h1>Obriši</h1>

<h3>Da li ste sigurni da želite obrisati ovo prisustvo?</h3>
<div>
    <h4>Prisustvo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KorisnikID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KorisnikID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TreningID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TreningID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prisutan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prisutan)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PrisustvoID" />
        <input type="submit" value="Potvrdi" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak</a>
    </form>
</div>
