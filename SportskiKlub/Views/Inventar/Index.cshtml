@model IEnumerable<SportskiKlub.Models.Inventar>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: radial-gradient(circle, rgba(63,94,251,1) 0%, rgba(252,70,107,1) 100%);
            <!-- background: linear-gradient(135deg, #1e3c72, #2a5298); -->
            color: #fff;
            overflow-x: hidden;
        }

        h1 {
             font-size: 2.5rem;
            text-align: center;
            margin-top: 1rem;
            color: #ff7eb3;
        }

        a {
            color: #ff7eb3;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            a:hover {
                color: #ff758c;
                transform: scale(1.1);
            }

        .table {
            width: 80%;
            margin: 2rem auto;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
            border-radius: 15px;
            overflow: hidden;
            animation: slideIn 1.5s ease;
        }

            .table th,
            .table td {
                padding: 1rem;
                text-align: left;
                border-bottom: 1px solid rgba(255, 255, 255, 0.2);
                color: #fff;
            }

            .table th {
                font-size: 1.2rem;
                text-transform: uppercase;
                background: linear-gradient(90deg, #ff7eb3, #ff758c);
                color: #fff;
                border: none;
            }

            .table tr:hover {
                background: rgba(255, 255, 255, 0.2);
                cursor: pointer;
            }

            .table td a {
                margin: 0 0.5rem;
                padding: 0.5rem 1rem;
                border-radius: 20px;
                background: linear-gradient(90deg, #ff758c, #ff7eb3);
                color: #fff;
                font-weight: bold;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .table td a:hover {
                    transform: scale(1.1);
                    background: linear-gradient(90deg, #ff7eb3, #ff758c);
                    box-shadow: 0px 8px 20px rgba(255, 117, 140, 0.6);
                }

        .btn {
            display: inline-block;
            padding: 0.5rem 1.5rem;
            background: linear-gradient(90deg, #ff758c, #ff7eb3);
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.4s ease;
        }

            .btn:hover {
                transform: scale(1.1);
                background: linear-gradient(90deg, #ff7eb3, #ff758c);
                box-shadow: 0px 8px 20px rgba(255, 117, 140, 0.6);
            }

        .btn-container {
            text-align: center;
            margin: 1rem 0;
        }

    </style>
</head>
<body>

    <h1>Inventar</h1>

    <p>
        <a asp-action="Create">Dodaj</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Naziv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kolicina)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naziv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kolicina)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.InventarID">Uredi</a> |
                        <a asp-action="Details" asp-route-id="@item.InventarID">Detalji</a> |
                        <a asp-action="Delete" asp-route-id="@item.InventarID">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
