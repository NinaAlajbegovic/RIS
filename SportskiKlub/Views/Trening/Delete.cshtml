@model SportskiKlub.Models.Trening

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            <!--background: linear-gradient(135deg, #1e3c72, #2a5298);-->
            background: radial-gradient(circle, rgba(63,94,251,1) 0%, rgba(252,70,107,1) 100%);
            color: #fff;
            overflow-x: hidden;
        }

        h1 {
            font-size: 2.5rem;
            text-align: center;
            margin-top: 1rem;
            color: #ff7eb3;
        }

        .row {
            display: flex;
            justify-content: center;
            margin: 2rem auto;
        }

        .col-md-6 {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
            width: 50%;
        }

        dl {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        dt {
            flex-basis: 30%;
            font-weight: bold;
        }

        dd {
            flex-basis: 70%;
            margin: 0;
        }

        .btn-danger {
            display: inline-block;
            padding: 0.8rem 2rem;
            background: linear-gradient(90deg, #ff758c, #ff7eb3);
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.4s ease;
        }

            .btn-danger:hover {
                transform: scale(1.1);
                background: linear-gradient(90deg, #ff7eb3, #ff758c);
                box-shadow: 0px 8px 20px rgba(255, 117, 140, 0.6);
            }

        a {
            color: #ff7eb3;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #ff758c;
            }
    </style>
</head>
<body>
    <h1>Obriši</h1>

    <h3 style="text-align: center;">Da li ste sigurni da želite obrisati ovaj trening?</h3>
    <div class="row">
        <div class="col-md-6">
            <h4 style="text-align: center;">Trening</h4>
            <hr />
            <dl>
                <dt>@Html.DisplayNameFor(model => model.Datum)</dt>
                <dd>@Html.DisplayFor(model => model.Datum)</dd>

                <dt>@Html.DisplayNameFor(model => model.Vrijeme)</dt>
                <dd>@Html.DisplayFor(model => model.Vrijeme)</dd>

                <dt>@Html.DisplayNameFor(model => model.Grupa)</dt>
                <dd>@Html.DisplayFor(model => model.Grupa)</dd>

                <dt>@Html.DisplayNameFor(model => model.Vrsta)</dt>
                <dd>@Html.DisplayFor(model => model.Vrsta)</dd>
            </dl>

            <form asp-action="Delete" style="text-align: center; margin-top: 2rem;">
                <input type="hidden" asp-for="TreningID" />
                <input type="submit" value="Obriši" class="btn-danger" />
                <a asp-action="Index" style="margin-left: 1rem;">Povratak</a>
            </form>
        </div>
    </div>
</body>
</html>
