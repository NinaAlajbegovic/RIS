@model IEnumerable<SportskiKlub.Models.Ocjena>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: radial-gradient(circle, rgba(63,94,251,1) 0%, rgba(252,70,107,1) 100%);
            overflow-x: hidden;
        }

        h1 {
            font-size: 2.5rem;
            text-align: center;
            margin-top: 1rem;
            color: #ff7eb3;
        }

        a {
            color: #ff7eb3;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #ff758c;
        }

        .table {
            width: 95%;
            margin: 2rem auto;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
        }

        .table th, .table td {
            padding: 1rem;
            text-align: left;
            color: #fff;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .table th {
            background: linear-gradient(90deg, #ff758c, #ff7eb3);
            color: #fff;
            text-transform: uppercase;
            font-size: 1rem;
        }

        .table tr:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .btn {
            display: inline-block;
            padding: 0.5rem 1.5rem;
            background: linear-gradient(90deg, #ff758c, #ff7eb3);
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.4s ease;
        }

        .btn:hover {
            transform: scale(1.1);
            background: linear-gradient(90deg, #ff7eb3, #ff758c);
            box-shadow: 0px 8px 20px rgba(255, 117, 140, 0.6);
        }

        .btn-container {
            text-align: center;
            margin: 1rem 0;
        }
    </style>
</head>
<body>
    <h1>Ocjena</h1>

    <p>
        <a asp-action="Create" class="btn">Dodaj ocjenu</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImeTrenera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OcjenaTrenera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KorisnikID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImeTrenera)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OcjenaTrenera)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KorisnikID)
                    </td>
                    <td>
                        @if (User.IsInRole("Administrator"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Uredi</a>
                        }
                        |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn">Detalji</a>
                        @if (User.IsInRole("Administrator"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn">Obriši</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
