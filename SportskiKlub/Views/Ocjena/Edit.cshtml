@model SportskiKlub.Models.Ocjena

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Ocjena</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImeTrenera" class="control-label"></label>
                <input asp-for="ImeTrenera" class="form-control" />
                <span asp-validation-for="ImeTrenera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OcjenaTrenera" class="control-label"></label>
                <input asp-for="OcjenaTrenera" class="form-control" />
                <span asp-validation-for="OcjenaTrenera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KorisnikID" class="control-label"></label>
                <input asp-for="KorisnikID" class="form-control" />
                <span asp-validation-for="KorisnikID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
